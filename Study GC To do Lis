<html>
<head>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #FFF3E0;
      color: #4E342E;
      margin: 0;
      padding: 20px;
    }

    #todo {
      max-width: 600px;
      margin: auto;
      background-color: #FFE0B2;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      color: #D84315;
    }

    input[type="text"], input[type="date"] {
      padding: 10px;
      margin-bottom: 10px;
      margin-right: 5px;
      border: 1px solid #FFB74D;
      border-radius: 6px;
      background-color: #FFF8E1;
      color: #4E342E;
      width: 58%;
    }

    button {
      padding: 10px 14px;
      background-color: #FF8A65;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #E64A19;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      background-color: #FFF3E0;
      padding: 12px;
      margin-top: 10px;
      border-radius: 8px;
      border: 1px solid #FFCC80;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      animation: fadeIn 0.5s ease;
    }

    .task-info {
      display: flex;
      align-items: center;
      gap: 10px;
      flex: 1;
    }

    .meta {
      font-size: 12px;
      color: #6D4C41;
      flex-basis: 100%;
      margin-top: 5px;
    }

    .completed span {
      text-decoration: line-through;
      color: #A1887F;
    }

    .icon-btn {
      background: none;
      border: none;
      cursor: pointer;
      font-size: 18px;
      color: #D84315;
      margin-left: 8px;
    }

    .icon-btn:hover {
      color: #BF360C;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <div id="todo">
    <h2>My To-Do List</h2>
    <input type="text" id="taskInput" placeholder="Add a new task...">
    <input type="date" id="dueDate">
    <button onclick="addTask()">Add</button>
    <ul id="taskList"></ul>
  </div>

  <script>
    let tasks = JSON.parse(localStorage.getItem("tasks")) || [];

    function saveTasks() {
      localStorage.setItem("tasks", JSON.stringify(tasks));
    }

    function renderTasks() {
      const list = document.getElementById("taskList");
      list.innerHTML = "";
      tasks.forEach((task, index) => {
        const li = document.createElement("li");
        li.className = task.completed ? "completed" : "";

        li.innerHTML = `
          <div class="task-info">
            <input type="checkbox" onchange="toggleComplete(${index})" ${task.completed ? "checked" : ""}>
            <span>${task.text}</span>
          </div>
          <div class="meta">
            Added: ${task.added}<br>
            Complete by: ${task.due || "No deadline"}
          </div>
          <button class="icon-btn" onclick="removeTask(${index})" title="Delete">&#128465;</button>
        `;
        list.appendChild(li);
      });
    }

    function addTask() {
      const input = document.getElementById("taskInput");
      const due = document.getElementById("dueDate").value;
      const text = input.value.trim();
      if (!text) return;

      const now = new Date();
      tasks.push({
        text: text,
        due: due,
        added: now.toLocaleString(),
        completed: false
      });

      input.value = "";
      document.getElementById("dueDate").value = "";

      saveTasks();
      renderTasks();
    }

    function toggleComplete(index) {
      tasks[index].completed = !tasks[index].completed;
      saveTasks();
      renderTasks();
    }

    function removeTask(index) {
      tasks.splice(index, 1);
      saveTasks();
      renderTasks();
    }

    renderTasks(); // Load on page start
  </script>
</body>
</html>
