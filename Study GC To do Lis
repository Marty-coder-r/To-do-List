<body>
    <div class="container">
        <h1>To Do List</h1>
        <input type="text" id="task-input" placeholder="Enter new task">
        <textarea id="description-input" placeholder="Enter task description"></textarea>
        <input type="date" id="complete-by-date" placeholder="Complete By">
        <button onclick="addTask()">Add Task</button>
        <div class="task-list" id="task-list"></div>
    </div>

    <script>
        // Load tasks from localStorage when the page is loaded
        window.onload = function() {
            loadTasks();
        };

        // Function to format date
        function formatDate(date) {
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0'); // Months are 0-indexed
            const year = date.getFullYear();
            return `${day}-${month}-${year}`;
        }

        // Add new task
        function addTask() {
            let taskInput = document.getElementById('task-input');
            let taskText = taskInput.value.trim();
            let descriptionInput = document.getElementById('description-input');
            let taskDescription = descriptionInput.value.trim();
            let completeByDateInput = document.getElementById('complete-by-date');
            let completeByDate = completeByDateInput.value;
            let currentDate = new Date();
            let formattedDate = formatDate(currentDate);


            if (taskText === "") return;

            let taskList = document.getElementById('task-list');
            let taskItem = document.createElement('div');
            taskItem.classList.add('task-item');

            taskItem.innerHTML = `
                <input type="checkbox" onclick="toggleTask(this)">
                <span>${taskText}</span>
                <p>${taskDescription}</p>
                <p class="date">Created: ${formattedDate}</p>
                <p class="date">Complete By: ${completeByDate}</p>
                <button onclick="removeTask(this)">Remove</button>
            `;

            taskList.appendChild(taskItem);
            taskInput.value = "";
            descriptionInput.value = "";
            completeByDateInput.value = "";

            saveTasks();  // Save tasks to localStorage
        }

        // Toggle task completion (line-through)
        function toggleTask(checkbox) {
            let taskItem = checkbox.parentElement;
            let taskSpan = taskItem.querySelector('span');
            if (checkbox.checked) {
                taskSpan.classList.add('completed');
            } else {
                taskSpan.classList.remove('completed');
            }
            saveTasks();  // Save tasks to localStorage
        }

        // Remove a task
        function removeTask(button) {
            let taskItem = button.parentElement;
            taskItem.remove();
            saveTasks();  // Save tasks to localStorage
        }

        // Save all tasks to localStorage
        function saveTasks() {
            let tasks = [];
            let taskItems = document.querySelectorAll('.task-item');

            taskItems.forEach(item => {
                let taskText = item.querySelector('span').innerText;
                let taskChecked = item.querySelector('input').checked;
                let taskDescription = item.querySelector('p:nth-of-type(1)').innerText;
                let createdDate = item.querySelector('p:nth-of-type(2)').innerText.replace('Created: ', '');
                let completeByDate = item.querySelector('p:nth-of-type(3)').innerText.replace('Complete By: ', '');
                tasks.push({
                    text: taskText,
                    checked: taskChecked,
                    description: taskDescription,
                    createdDate: createdDate,
                    completeByDate: completeByDate
                });
            });

            localStorage.setItem('tasks', JSON.stringify(tasks)); // Save to localStorage
        }

        // Load tasks from localStorage
        function loadTasks() {
            let tasks = JSON.parse(localStorage.getItem('tasks')) || [];

            tasks.forEach(task => {
                let taskList = document.getElementById('task-list');
                let taskItem = document.createElement('div');
                taskItem.classList.add('task-item');

                taskItem.innerHTML = `
                    <input type="checkbox" onclick="toggleTask(this)" ${task.checked ? 'checked' : ''}>
                    <span class="${task.checked ? 'completed' : ''}">${task.text}</span>
                    <p>${task.description}</p>
                    <p class="date">Created: ${task.createdDate}</p>
                    <p class="date">Complete By: ${task.completeByDate}</p>
                    <button onclick="removeTask(this)">Remove</button>
                `;

                taskList.appendChild(taskItem);
            });
        }
    </script>
</body>
